language: python
python: 3.6
dist: xenial

services:
  - docker

addons:
  firefox: "latest-esr"

before_install:
  - git clone --depth 1 https://github.com/GeoNode/geonode-selenium.git
  - export GEONODE_REPOSITORY=$(pwd)

install:
  - pip install -r geonode-selenium/requirements.txt

script:
  - geonode-selenium/test-docker.sh
