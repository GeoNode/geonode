{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: local runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "runserver",
                "--settings=geonode.local_settings"
            ],
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env_dev",
            "django": true
        },
        {
            "name": "Python: ThesaurusAvailable",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "test",
                "geonode.base.tests.TestThesaurusAvailableForm",
                "--settings=geonode.local_settings",
                "--keepdb"
            ],
            "django": true
        },
        {
            "name": "Python: Tests Load Thesaurus",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "test",
                "geonode.tests.test_load_thesaurus",
                "--settings=geonode.local_settings",
                "--keepdb"
            ],
            "django": true
        },
        {
            "name": "Python: Tests Layer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "test",
                "geonode.layers.tests",
                "-v",
                "2",
                "--settings=geonode.local_settings",
                "--keepdb"
            ],
            "envFile": "${workspaceFolder}/.env_dev",
            "django": true
        },
        {
            "name": "Python: Load Thesaurus",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "load_thesaurus",
                "--file=/home/mattia/thesaurus/httpinspireeceuropaeumetadatacodelistLimitationsOnPublicAccess-LimitationsOnPublicAccess.rdf",
                "--name=LimitationsOnPublicAccess",
                "--settings=geonode.local_settings"
            ],
            "django": true
        }
    ]
}